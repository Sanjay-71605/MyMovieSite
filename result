let movies = (allMovies[genre] && allMovies[genre][language]) || [];
let shownIndexes = [];

function displayMovie() {
  if (shownIndexes.length === movies.length) {
    document.getElementById("card").innerHTML = `<h2>ðŸ˜” No more movies left in ${genre} - ${language}.</h2>`;
    return;
  }
  let idx;
  do {
    idx = Math.floor(Math.random() * movies.length);
  } while (shownIndexes.includes(idx));
  shownIndexes.push(idx);
  const m = movies[idx];
  document.getElementById("movie-name").innerText = `${shownIndexes.length}. ${m.name}`;
  document.getElementById("credits").innerText = `ðŸŽ¥ Directed By ${m.director} | ðŸŽ­ Lead By ${m.actor}`;
  document.getElementById("details").innerText = `${m.year} â€¢ IMDb ${m.rating}`;
  document.getElementById("description").innerText = m.desc;
  document.getElementById("platform").innerText = `Available on: ${m.platform}`;
  document.getElementById("response").innerText = "";
}

function handleResponse(seen) {
  if (seen) {
    displayMovie();
  } else {
    document.getElementById("response").innerText = "ðŸ”¥ This is the perfect movie for your night!";
  }
}

window.onload = () => {
  displayMovie();
};
</script>
